<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ChipTextStyle_Selected">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreen</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorgray
        </item>
    </style>

    <style name="EditTextStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:paddingBottom">@dimen/_20dp</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="normalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_10dp</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_button_high_curve</item>
        <item name="android:layout_marginStart">@dimen/_25dp</item>
        <item name="android:layout_marginTop">@dimen/_25dp</item>
        <item name="android:layout_marginEnd">@dimen/_25dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Dialog_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_20dp</item>
        <item name="cardCornerRadius">@dimen/_20dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_in_text">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/colorgray</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorgray</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/colorgray</item>
    </style>

    <style name="TextInYellowViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:textColor">@color/colorgray</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="smallTextsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:textColor">@color/colorgray</item>
    </style>


    <style name="code_inputStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:focusable">true</item>
    </style>

</resources>