<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_15dp"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/colorpinkywhitess"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        >

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:id="@+id/iv_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_dollaric"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total_orders"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@id/iv_icon"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            tools:text="Total Orders"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5450 Pound"
            android:id="@+id/tv_price"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@id/tv_total_orders"
            app:layout_constraintStart_toStartOf="@id/tv_total_orders"
            app:layout_constraintTop_toBottomOf="@id/tv_total_orders"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>