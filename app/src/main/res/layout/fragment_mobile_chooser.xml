<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.Login.fragments.register.enter_mobile.MobileChooserFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_to_continue_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/tajawal_bold"
        android:textColor="@color/colorDark"
        android:id="@+id/tv_register"
        android:textSize="24sp"
        />
    <com.tidow.tidowallet.custom.CustomTitleEditText
        android:id="@+id/custom_mobile_number"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:maxLength="11"
        app:layout_constraintStart_toStartOf="@id/tv_register"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:text="@string/write_your_number_title" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"
        />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verify_mobile_number_titlee"
        app:layout_constraintStart_toStartOf="@id/custom_mobile_number"
        app:layout_constraintTop_toBottomOf="@id/custom_mobile_number"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_verify"
        app:layout_constraintEnd_toEndOf="@id/custom_mobile_number"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="@color/colorDark"
        />


    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/progres"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>